<h1>Login</h1>
<% if (messages.error) {%>
	<%= messages.error %>
<% } %>

<form class="form" action="/login" method="POST">
	<div class="form-group">
		<label for="email">Email</label>
		<input class="form-control search-transparent"type="email" id="email" name="email" required>
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-control search-transparent" type="password" id="password" name="password" required>
	</div>
	<button class="btn btn-transparent" type="submit">Log in</button>
	<br>
	<a class="link" href="/register">Register</a>
	<a class="link" href="/passwordReset">Forgot password</a>
</form>