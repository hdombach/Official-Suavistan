<h1>Register</h1>

<form class="from" action="/register" method="POST">
	<div class="form-group" >
		<label for="name">Name</label>
		<input class="form-control search-transparent" type="text" id="name" name="name" required>
	</div>
	<div class="form-group"> 
		<label for="email">Email</label>
		<input class="form-control search-transparent" type="email" id="email" name="email" required>
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-control search-transparent" type="password" id="password" name="password" required>
	</div>
	<div class="form-group">
		<label for="password_confirmation">Confirm Password</label>
		<input class="form-control search-transparent" type="password" id="password_confirmation" name="password_confirmation" required>
	</div>
	<button class="btn btn-transparent" type="submit">Register</button>
</form>

<a class="link" href="/login">Login</a>