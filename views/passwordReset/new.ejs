<h1>Enter new password</h1>

<form class="form" action="<%= url %>?_method=PUT" method="POST">
	<div class="form-group">
		<label for="password">New Password</label>
		<input class="form-control search-transparent" type="password" id="password" name="password" required>
	</div>
	<div class="form-group">
		<label for="passwordConfirmation">Confirm Password</label>
		<input class="form-control search-transparent" type="password" id="passwordConfirmation" name="passwordConfirmation" required>
	</div>
	<button class="btn btn-transparent" type="submit">Update</button>
</form>
