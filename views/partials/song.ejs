<tr onclick="if (!event.defaultPrevented) {playSong('<%= index %>')}">
	<td><%= song.name %></td>
	<td><%= song.artist %></td>
	<td>
		<div class="dropdown">
			<button class="btn btn-min" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<span class="material-icons">more_horiz</span>
			</button>
			<ul class="dropdown-menu dropdown-transparent" role="menu" aria-labelledby="dropdownMenu">
				<a class="dropdown-item" onclick="playSong('<%= index %>')">Play</a>
				<a class="dropdown-item"  href="/musics/<%= song.id%>">View</a>
				<a class="dropdown-item" href="/musics/<%= song.id%>/edit">Edit</a>
				<li class="dropdown-submenu">
					<a  class="dropdown-item dropdown-item-transparent" tabindex="-1" href="#">Add to playlist</a>
					<ul class="dropdown-menu dropdown-transparent">
					<% playlists.forEach(playlist => { %>
						<form action="/musics/<%= song.id%>/<%= playlist.id%>?_method=PUT" method="POST">
							<button class="dropdown-item dropdown-item-transparent" type="submit"><%= playlist.name %></button>
						</form>
					<% }) %>
					</ul>
				</li>
				<div class="dropdown-divider transparent"></div>
				<div class="dropdown-item dropdown-item-transparent">
					<%- include('./deleteForm.ejs', {url: `/musics/${song.id}`}) %>
				</div>
			</ul>
		</div>
	</td>
</tr>