<h1>Edit Account</h1>

<form class="form" action="/account?_method=PUT" method="POST">
	<div class="form-row">
		<div class="form-group col-md-6">
			<label>Name</label>
			<input class="form-control search-transparent" type="text" name="name" value='<%= user.name %>'>
		</div>
		<div class="form-group col-md-6">
			<label>Email</label>
			<input class="form-control search-transparent" type="email" name="email" value='<%= user.email %>'>
		</div>
	</div>
	<div class="form-group">
		<button class="btn btn-transparent">
			Change Password
		</button>
	</div>
	<div class="form-group">
		<label>Color</label>
		<input type="range" class="form-range" min="0" max="359" step="0" name="colorHue" value = "<%= user.colorHue %>" onchange="updateColor(this.value);">
	</div>
	<a class="link" href="/account">Cancel</a>
	<button class="btn btn-transparent" type="submit">Save</button>
</form>