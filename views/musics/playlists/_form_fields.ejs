<div class="form-group">
	<Label>Title</Label>
	<input class="form-control search-transparent" type="text" name="name" value = '<%= playlist.name %>' required>
</div>

<div class="form-group">
	<Label>Description</Label>
	<textarea class="form-control search-transparent" name="description"><%= playlist.description %></textarea>
</div>

<div class="form-group">
	<div class="form-check">
		<input class="form-check-input" type="checkbox" id="public-check" name="public" value="isPublic" <%= Boolean(playlist.public) ? 'checked' : '' %>>
		<label class="form-check-label" for"public-check">
			Public
		</label>
		<small id="publicHelp" class="form-text text-muted">
			Allows other people to add/remove songs.
		</small>
	</div>
</div>