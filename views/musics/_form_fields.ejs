<div class="form-row">
	<div class="form-group col-md-6">
		<label>Name</label>
		<input class="form-control search-transparent" type="text" name="name" value = '<%= song.name %>'>
	</div>
	<div class="form-group col-md-6">
		<label>Artist</label>
		<input class="form-control search-transparent" type="text" name="artist" value = '<%= song.artist %>'>
	</div>
</div>

<div class="form-group">
	<label>Youtube Link</label>
	<input class="form-control search-transparent" type="url" name="ytLink" value = '<%= song.ytLink %>'>
</div>

<div class="form-group">
	<label for="floatingTextarea">Description</label>
	<textarea class="form-control search-transparent" name="description"></textarea>
</div>

<div class="form-group">
	<div class="form-check">
		<input class="form-check-input" type="checkbox" id="explicit-check" name="explicit" value = 'isExplicit' <%= Boolean(song.explicit) ? 'checked' : '' %>>
		<label class="form-check-label" for="explicit-check">
			Explicit
		</label>
	</div>
</div>
<div class="form-group">
	<label>Color</label>
	<input type="range" class="form-range" min="0" max="359" step="0" name="colorHue" value = "<%= song.colorHue %>" onchange="updateColor(this.value);">
</div>